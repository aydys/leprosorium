<h4>Post details</h4>
<p>
    <p><%= @row['content'] %>
    <br>
    Added at 
    <%= @row['created_date']%>
    <hr>
</p>
<br>
<h4>Comments</h4>
<br>
<% @comments.each do |comment| %>
    <p>
        <%= comment['content']%>
    </p>
    <br>
    <span style='font-size=75%; color: #999'>Added at 
    <%= @row['created_date']%></span>
    <hr>
<% end %>

<p>
    <form action='/details/<%= @row['id'] %>' method='POST' role='form'>
        <textarea name='content' class='form-control' rows='6' placeholder='Type comments text here'></textarea>
        <br>
        <button type='submit' class='btn btn-primary'>Add comment</button>
    </form>
</p>